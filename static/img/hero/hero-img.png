<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <!-- Background -->
  <rect width="800" height="600" fill="#f8fafc" rx="20" ry="20"/>
  
  <!-- Decorative Elements -->
  <circle cx="400" cy="300" r="250" fill="#e2e8f0" opacity="0.5"/>
  <circle cx="400" cy="300" r="150" fill="#cbd5e1" opacity="0.5"/>
  
  <!-- Money Transfer Visualization -->
  <g transform="translate(260, 230)">
    <!-- Person 1 (Investor) -->
    <circle cx="80" cy="80" r="60" fill="#2563eb" opacity="0.8"/>
    <circle cx="80" cy="50" r="25" fill="#f8fafc"/>
    <rect x="55" y="85" width="50" height="50" rx="25" fill="#f8fafc"/>
    
    <!-- Person 2 (Borrower) -->
    <circle cx="380" cy="80" r="60" fill="#10b981" opacity="0.8"/>
    <circle cx="380" cy="50" r="25" fill="#f8fafc"/>
    <rect x="355" y="85" width="50" height="50" rx="25" fill="#f8fafc"/>
    
    <!-- Connection Line -->
    <path d="M150,80 C200,20 260,140 310,80" stroke="#0f172a" stroke-width="8" fill="none" stroke-dasharray="15,10"/>
    
    <!-- Money Transfer Symbol -->
    <g transform="translate(215, 60)">
      <circle cx="20" cy="20" r="30" fill="#f59e0b" opacity="0.9"/>
      <text x="20" y="30" font-family="Arial" font-size="40" font-weight="bold" text-anchor="middle" fill="#f8fafc">$</text>
    </g>
  </g>
  
  <!-- Metrics Cards -->
  <g transform="translate(570, 100)">
    <rect x="0" y="0" width="180" height="80" rx="10" fill="white" stroke="#cbd5e1" stroke-width="2"/>
    <text x="20" y="30" font-family="Arial" font-size="14" fill="#64748b">Return Rate</text>
    <text x="20" y="60" font-family="Arial" font-size="24" font-weight="bold" fill="#2563eb">9.2%</text>
  </g>
  
  <g transform="translate(570, 200)">
    <rect x="0" y="0" width="180" height="80" rx="10" fill="white" stroke="#cbd5e1" stroke-width="2"/>
    <text x="20" y="30" font-family="Arial" font-size="14" fill="#64748b">Active Loans</text>
    <text x="20" y="60" font-family="Arial" font-size="24" font-weight="bold" fill="#10b981">1,200+</text>
  </g>
  
  <g transform="translate(570, 300)">
    <rect x="0" y="0" width="180" height="80" rx="10" fill="white" stroke="#cbd5e1" stroke-width="2"/>
    <text x="20" y="30" font-family="Arial" font-size="14" fill="#64748b">Users</text>
    <text x="20" y="60" font-family="Arial" font-size="24" font-weight="bold" fill="#f59e0b">15,000+</text>
  </g>
</svg>